<div class="border-form-div">
  <h3 align="center"> sign up </h3>
<body>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "name" %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "email" %>
    <%= f.input :password, required: true, label: false, placeholder: "password", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "confirm password" %>
  </div>

  <div class="form-button">
    <%= f.button :submit, "Sign up", :class => "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</body>
