!!!
%html
%head
  %title henna-dot
  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
  %link{:href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css", :rel => "stylesheet"}
  %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}
  = csrf_meta_tags
%body
  %header
    .wrapper.clearfix
      #logo
        = link_to image_tag("H2-v2.png", :width => 75, :height => 75), root_path
        = link_to "henna dot", root_path
      #search
        = form_tag search_posts_path, method: :get do
          = text_field_tag(:query, params[:query], autocomplete: 'off', tabindex: "1")
      %nav
        - if user_signed_in?
          = link_to "Sign out", destroy_user_session_path, :method => :delete, class: "button"
          = link_to current_user.name, edit_user_registration_path
          = link_to "Add New Inspiration", new_post_path, class: "button"
        - else
          = link_to "Sign in", new_user_session_path, class: "button"
          = link_to "Sign Up", new_user_registration_path, class: "button"
          = link_to "About", about_path, class: "button"
        %a{:href => "https://www.facebook.com/henna.dot.9"}
          %i.fa.fa-facebook-square.fa-2x
        %a{:href => "https://www.instagram.com/hennadot/"}
          %i.fa.fa-instagram.fa-2x
        %a{:href => "http://hennadot.tumblr.com/"}
          %i.fa.fa-tumblr.fa-2x
  %p.notice
    = notice
  %p.alert
    = alert


  .wrapper
    = yield

