#posts
    - if @posts.empty?
        %p= "We can't find any search results for <b>#{params[:query]}</b>".html_safe
    - else
        %p= "Search results for <b>#{params[:query]}</b>".html_safe
        - @posts.each do |post|
            .post
                .post_image
                    = link_to (image_tag post.image.url(:small)), post
                .post_content
                    .title
                        %h2= link_to post.title, post
                    .data.clearfix
                        %p.username
                            Shared by
                            = post.user.name
                        %p.buttons
                            %span
                                %i.fa.fa-comments-o
                                = post.comments.count
                            %span
                                %i.fa.fa-thumbs-o-up
                                = post.get_likes.size